#include<bits/stdc++.h>
using namespace std;
#define rep(i,n) for(int i=0;i<n;i++)
int main()
{
    int a,b,c,d;
    while(cin>>a>>b>>c>>d && a!=0)
    {
        if(a==c && b==d) cout<<0<<endl;
        else if(a==c || b==d||abs(a-c)==abs(b-d)) cout<<1<<endl;
        else cout<<2<<endl;
    }
    return 0;
}
